<!--my.wxml-->
<view class="container">
  <view class="userinfo">
    <button wx:if="{{!hasUserInfo && canIUse}}" open-type="getUserInfo" bindgetuserinfo="getUserInfo"> 获取头像昵称 </button>
    <block wx:else>
      <image bindtap="bindViewTap" class="userinfo-avatar" src="{{userInfo.avatarUrl}}" mode="cover"></image>
      <text class="userinfo-nickname">{{userInfo.nickName}}</text>
    </block>
  </view>
  <view class="usermotto" wx:if="{{mypetNum}}">
    <text class="user-motto">当前您拥有的宠物：{{myPet}}</text>

    <view class="usermotto" wx:if="{{mypetNum>=3}}">
      <text class="user-motto">您已经有三只以上宠物了哦，不能再领养了</text>
    </view>
    <button wx:else type="primary" bindtap="navToPetShop">再领养一只</button>

    <button type="default" bindtap="navToPetSales">狠心丢弃爱宠</button>
  </view>

  <button wx:else type="primary" bindtap="navToPetShop">您还没有宠物快来领养吧</button>
  <view>版权所属微信号：Edeline @2019</view>
</view>