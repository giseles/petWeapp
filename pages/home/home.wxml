<!--pages/home/home.wxml-->
<view class="pageCon" wx:if="{{petNum}}">
  <text class="showItem">当前您拥有的宠物：{{myPet}}</text>

  <view class="showItemBox">
    <view>{{activePet}}龄{{activeInfo.age}}岁</view>
    <view class="section">
      <picker bindchange="bindPickerChange" value="{{indexPicker}}" range="{{myPet}}">
        <view class="picker">
          选择宠物：{{activePet}}
        </view>
      </picker>
    </view>
  </view>

  <view class="gruop">
    <view class="text-gruop">心情</view>
    <view class="progress-gruop">
      <progress percent="{{activeInfo.mood}}" color="#10AEFF"/>
    </view>
    <icon wx:if="{{activeInfo.mood>66}}" type="info_circle" color="primary" />
    <icon wx:if="{{activeInfo.mood>33 && activeInfo.mood<=66}}" type="info_circle" color="#C9C9C9" />
    <icon wx:if="{{activeInfo.mood<=33}}" type="info_circle" color="red" />
  </view>
  <view class="gruop">
    <view class="text-gruop">健康</view>
    <view class="progress-gruop">
      <progress percent="{{activeInfo.health}}" color="#10AEFF"/>
    </view>
    <icon wx:if="{{activeInfo.health>66}}" type="info_circle" color="primary" />
    <icon wx:if="{{activeInfo.health>33 && activeInfo.health<=66}}" type="info_circle" color="#C9C9C9" />
    <icon wx:if="{{activeInfo.health<=33}}" type="info_circle" color="red" />
  </view>

  <view class='pet-group'>
    <view class='showPet'  wx:if="{{petSize}}" style='font-size:{{petSize}}'>
      <!-- <text animation="{{animationData}}"> {{activePet}} -->
      <text class="{{animationClass}}"> {{activePet}}
     </text>
    </view>
    <view class='feed'>
      <text bindtap="handleFeed" data-feed="water">喂水</text>
      <text bindtap="handleFeed" data-feed="food">投食</text>
      <text bindtap="handleFeed" data-feed="play">玩耍</text>
    </view>
  </view>

</view>
<view class="container" wx:else>
  <button class="w100" type="primary" bindtap="navToPetShop">您还没有宠物快来领养吧</button>
</view>