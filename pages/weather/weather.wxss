/* pages/weather/weather.wxss */

.containerWeaher {
  width: 100%;
  color: #fff;
  box-sizing: border-box;
}

.bcg {
  position: fixed;
  height: 100vh;
  width: 100%;
  z-index: -1;
}

.main {
  padding: 80rpx 0 20rpx;
  width: 100%;
  display: flex;
  align-items: center;
  flex-direction: column;
}

.main .city {
  font-size: 66rpx;
}

.main .desc {
  margin-top: 10rpx;
  font-size: 24rpx;
  height: 26rpx;
  line-height: 26rpx;
  padding: 10rpx 20rpx;
  border-radius: 20rpx;
  background: rgba(240, 240, 240, 0.2);
}

.main .weater {
  font-size: 200rpx;
  font-weight: lighter;
}

.main .date {
  margin-top: 40rpx;
  width: 650rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 30rpx;
}

.forecast {
  width: 100%;
  padding: 30rpx 0;
  display: flex;
  background: rgba(0, 0, 0, 0.5);
}

.forecast .item {
  flex: 1;
  text-align: center;
  font-size: 24rpx;
  line-height: 40rpx;
}

.forecast .item:nth-child(2) {
  border-left: 1px solid rgba(250, 250, 250, 0.2);
  border-right: 1px solid rgba(250, 250, 250, 0.2);
}

.advise {
  margin: 50rpx 0 80rpx;
  width: 100%;
  display: flex;
  align-items: center;
  flex-direction: column;
  background: rgba(0, 0, 0, 0.5);
}

.advise .item {
  display: flex;
  align-items: center;
  width: 650rpx;
  padding: 10px 5rpx;
  font-size: 24rpx;
  border-bottom: 1px solid rgba(250, 250, 250, 0.2);
}

.advise .item .icon {
  float: left;
  width: 80rpx;
  height: 80rpx;
  margin: 0 20rpx;
}

.advise .item .right {
  float: right;
  width: 520rpx;
}

.advise .item .top {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 30rpx;
  line-height: 60rpx;
}
