/**reset**/

page {
  background-color: #f8f8f8;
  height: 100%;
  font-size: 32rpx;
  line-height: 1.6;
  box-sizing: border-box;
}

checkbox, radio {
  margin-right: 10rpx;
}

button {
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}

form {
  width: 100%;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
  padding: 0 30rpx 0;
  box-sizing: border-box;
}

.w100 {
  width: 100%;
  text-align: center;
}

.padding30 {
  width: 690rpx;
}

.pageCon {
  width: 100%;
  flex-direction: column;
  display: flex;
  padding: 40rpx 30rpx 0;
  box-sizing: border-box;
}

/*单选区域*/

.showItem {
  width: 690rpx;
  background: #fff;
  border-radius: 4rpx;
  margin: 40rpx auto;
  padding: 30rpx;
  box-sizing: border-box;
}

.section-title {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 10rpx;
  padding-left: 30rpx;
  padding-right: 30rpx;
}

.backWhite {
  margin: 20rpx 0 60rpx;
  background: #fff;
  padding-left: 15px;
  border-bottom: 1px solid #d8d8d8;
  border-top: 1px solid #d8d8d8;
}

.backWhite .radio {
  display: flex;
  align-items: center;
  width: 100%;
  height: 80rpx;
  border-bottom: 1px solid #d8d8d8;
}

.backWhite .radio:last-child {
  border-bottom: none;
}
